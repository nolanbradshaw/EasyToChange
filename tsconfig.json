{
	"compilerOptions": {
		"module": "ES2022",
		"target": "ES2022",
		"outDir": "dist",
		"rootDir": ".",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"types": ["node", "sinon", "vscode"]
	},
	"include": ["src", "tests"],
  	"exclude": ["node_modules", "dist"]
}
